#!/bin/sh
usage () {
cat <<EOF
usage: configure [ -h | --help ] [ -g | --debug ]
EOF
}
die () {
  echo "configure: error: $*" 1>&2
  exit 1
}
msg () {
  echo "[configure] $*"
}
debug=no
while [ $# -gt 0 ]
do
  case "$1" in
    -h | --help) usage; exit 0;;
    -g | --debug) debug=yes;;
    *) die "invalid option '$1' (try '-h')";;
  esac
  shift
done
VERSION="`cat VERSION`"
[ -d .git ] && VERSION="$VERSION `git rev-parse HEAD 2>/dev/null`"
msg "Version '$VERSION'"
COMPILE="gcc -Wall"
if [ $debug = yes ]
then
  COMPILE="$COMPILE -g"
else
  COMPILE="$COMPILE -O3 -DNDEBUG"
fi
msg "Compiling with '$COMPILE'"
rm -f config.h
cat<<EOF>config.h
#define VERSION "$VERSION"
#define COMPILE "$COMPILE"
EOF
msg "Generated 'config.h'"
rm -f makefile
sed -e "s#@COMPILE@#$COMPILE#" makefile.in > makefile
msg "Generated 'makefile'"
msg "run 'make'"
